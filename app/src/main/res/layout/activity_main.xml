<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:background="#EDD171"
            app:srcCompat="@drawable/logo_it_s" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EDD171"
            android:text="Midterm 060243118"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btnGpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="App Calculate GPA"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/btn_star" />

        <Button
            android:id="@+id/btnTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="App Calculate Tax"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/btn_star" />

        <Button
            android:id="@+id/btnShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="App Slide Show"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/btn_star" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="About"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/btn_star" />

        <Button
            android:id="@+id/btnQuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Quit"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/btn_star" />
    </LinearLayout>
</LinearLayout>